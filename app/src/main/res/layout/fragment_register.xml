<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/emojiesbg"
        android:orientation="vertical"
        tools:context=".RegisterFragment">


    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Mail"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:backgroundTint="#fff"
            android:id="@+id/edt_user_email"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toTopOf="@+id/edt_user_password"
            android:layout_marginTop="110dp"
            app:layout_constraintTop_toBottomOf="@+id/img_select_profile"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:backgroundTint="#fff"
            android:hint="Şifre"
            android:id="@+id/edt_user_password"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-16dp"
            android:layout_marginBottom="244dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_register"
            android:layout_marginTop="65dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_user_email"/>

    <View
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:id="@+id/view"
            tools:ignore="MissingConstraints" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:background="#CDDC39"/>
    <ImageView
            android:layout_width="94dp"
            android:src="@drawable/ic_person_add_black_24dp"
            android:layout_height="103dp"
            android:id="@+id/img_select_profile"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="@+id/view"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/edt_user_email"
            app:layout_constraintVertical_bias="0.0"/>
    <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="@string/banner_ad_unit_id"
            tools:ignore="MissingConstraints"
            ads:layout_constraintStart_toStartOf="parent"
            ads:layout_constraintEnd_toEndOf="parent"
            ads:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"
            ads:layout_constraintTop_toBottomOf="@+id/edt_user_password" android:layout_marginBottom="8dp"
            ads:layout_constraintBottom_toTopOf="@+id/btn_register">
    </com.google.android.gms.ads.AdView>
    <Button
            android:text="Kayıt Ol"
            android:background="#fff"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_register" tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            ads:layout_constraintHorizontal_bias="0.488"
            tools:layout_editor_absoluteY="643dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>