<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@drawable/emojiesbg"
        tools:context=".LeadersFragment"
        android:layout_height="match_parent">
    <View android:layout_width="match_parent"
          android:layout_height="60dp"
          android:background="#FF0000"
          tools:ignore="MissingConstraints"
          android:id="@+id/view2">
    </View>
    <ImageView
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/img_back"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminateTint="#fff"
            android:indeterminateTintMode="src_atop"
            android:indeterminate="true"
            android:id="@+id/progressBar2" tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/rc_view_leaders"
            app:layout_constraintBottom_toTopOf="@+id/rc_view_leaders"/>
    <TextView
            android:text="Liderler"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:textSize="30dp"
            android:textColor="#fff"
            android:id="@+id/textView2"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            android:layout_marginEnd="160dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/view2"
            app:layout_constraintStart_toEndOf="@+id/img_back"
            android:layout_marginStart="5dp" app:layout_constraintHorizontal_bias="0.15" tools:ignore="UnknownId"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/rc_view_leaders"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/view2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
